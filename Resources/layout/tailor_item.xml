<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:id="@+id/tailor_card_root"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/tcard_ll1"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:id="@+id/tcard_iview"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                android:padding="4dp"
                app:civ_border_color="@color/gray_light"
                app:civ_border_width="1dp"
                android:layout_gravity="center_horizontal"
                />

            <RatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tcard_tratingbar"
                android:rating="2"
                android:numStars="5"
                />

        </LinearLayout>      

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tcard_tname"
            android:layout_toEndOf="@+id/tcard_ll1"
            android:layout_alignParentEnd="true"
            android:text="Red Mega Coutre"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:fontFamily="@font/raleway_bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tcard_tdesc"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@+id/tcard_ll1"
            android:layout_alignParentEnd="true"
            android:text="Menswear, womenswear"
            android:layout_below="@+id/tcard_tname"
            android:textAppearance="?attr/textAppearanceBody2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tcard_location"
            android:layout_toEndOf="@+id/tcard_ll1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tcard_tdesc"
            android:text="Madina new road"
            android:textAppearance="?attr/textAppearanceBody2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tcard_pmethods"
            android:layout_toEndOf="@+id/tcard_ll1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tcard_location"
            android:text="Payment methods"
            android:textAppearance="?attr/textAppearanceBody2"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
