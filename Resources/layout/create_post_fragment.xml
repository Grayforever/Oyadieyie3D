<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:clipToPadding="false"
    tools:ignore="ContentDescription,HardcodedText">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/create_post_userProfile"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_post_userName"
        app:layout_constraintBottom_toTopOf="@+id/categs_scroller"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/create_post_userName"
        app:layout_constraintStart_toEndOf="@+id/create_post_userProfile"
        app:layout_constraintEnd_toStartOf="@+id/post_progress"
        app:layout_constraintBottom_toTopOf="@+id/categs_scroller"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?attr/textAppearanceBody1"
        android:text="Create Post"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        />

    <ProgressBar
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/post_progress"
        app:layout_constraintEnd_toStartOf="@+id/done_btn"
        app:layout_constraintStart_toEndOf="@+id/create_post_userName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/done_btn"
        android:indeterminate="true"
        android:visibility="invisible"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_btn"
        app:layout_constraintEnd_toStartOf="@+id/post_cancel_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/categs_scroller"
        android:text="Post"
        android:enabled="false"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/done_btn"
        android:padding="4dp"
        android:tint="@android:color/holo_red_light"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categs_scroller"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_post_userPhoto"
        app:layout_constraintBottom_toTopOf="@+id/create_post_et">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="true"
            android:id="@+id/cat_chip_group"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chip_men"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Menswear"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_user_male"
                />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chip_women"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Wemen wear"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_female"
                />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chip_kids"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Children"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_children"
                />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chip_unisex"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Unisex"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_unisex"
                />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chip_ppe"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="PPEs"
                app:chipIconEnabled="true"
                app:chipIcon="@drawable/ic_protection_mask"
                />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>
            
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/create_post_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_to_post"
        app:layout_constraintTop_toBottomOf="@+id/categs_scroller"
        android:layout_marginEnd="8dp"
        app:counterEnabled="true"
        app:counterMaxLength="48"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add caption"
            android:maxLength="48"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:id="@+id/image_to_post"
        android:src="@drawable/img_placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/create_post_et"
        app:layout_constraintTop_toTopOf="@+id/create_post_et"
        app:layout_constraintBottom_toBottomOf="@+id/create_post_et"
        />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/photo_choser_togglegrp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_post_et"
        app:singleSelection="true"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choose_photo_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="2dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_add_photo"
            android:text="Choose"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/open_cam_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeWidth="2dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_camera"
            android:text="Capture"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
