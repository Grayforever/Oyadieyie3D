<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:clipToPadding="false"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/get_sms_sub2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/otp_tv"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:text="jfghjfhgj"
        android:gravity="center"
        />

    <com.goodiebag.pinview.Pinview
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/otp_tv"
        android:padding="16dp"
        app:pinLength="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:pinWidth="40dp"
        app:pinHeight="40dp"
        app:splitWidth="10dp"
        app:hint="0"
        app:forceKeyboard="false"
        app:cursorVisible="false"
        app:inputType="number"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_otp_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/resend_code_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verify_otp_fab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Resend code in"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
