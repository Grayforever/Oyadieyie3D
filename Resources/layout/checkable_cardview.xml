<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="@dimen/card_height_q"
    tools:layout_width="match_parent"
    tools:parentTag="com.google.android.material.card.MaterialCardView"
    tools:layout_gravity="center">
    
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/s_card_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/raleway_bold"
            />

        <TextView
            android:id="@+id/s_card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/raleway_bold"
            android:text="Free" 
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_card_duration_txt"
            android:layout_alignParentEnd="true"
            android:text="For 1 month"
            android:textAppearance="?attr/textAppearanceOverline"
            android:layout_below="@+id/s_card_status"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_card_box_txt"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBody1"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s_card_try_btn"
            android:text="Try 1 month free"
            android:layout_above="@+id/s_card_offer_det_txt"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/raleway_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_card_offer_det_txt"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBody2"
            />

    </RelativeLayout>

</merge>
